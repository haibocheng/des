	<data>
		<driver>com.mysql.jdbc.Driver</driver>
		<dsn>jdbc:mysql://des:des123@localhost:3306/des</dsn>
	</data>
	
	<!-- Paths -->
	<profiles>profiles</profiles>
	
	<!-- Commands -->
	<commands>
		<!-- FFmpeg -->
		<command>
			<name>FFMpeg</name>
			<engine>FFMpeg</engine>
			<path>commands/ffmpeg-git-01a73d6-win64-shared/bin/ffmpeg.exe</path>
			<params>
				<prefix>-</prefix>
				<separator></separator>
